<%- include('partials/header') %>

<div class="container mt-5">
  <h1>All Users</h1>

  <div class="row">
    <div class="col-sm-8">
        <table class="table table-striped">
            <thead>
              <tr>
                <th>Username</th>
                <th>Name</th>
                <th>CNIC</th>
                <th>Gender</th>
                <th>Balance</th>
                <th>Is Admin</th>
                <th>Is Staff</th>
              </tr>
            </thead>
            <tbody>
              <% for (let i = 0; i < users.length; i++) { %>
                <tr>
                  <td><%= users[i].username %></td>
                  <td><%= users[i].name %></td>
                  <td><%= users[i].cnic %></td>
                  <td><%= users[i].gender %></td>
                  <td><%= users[i].balance %></td>
                  <td><%= users[i].isadmin %></td>
                  <td><%= users[i].isstaff %></td>
                </tr>
              <% } %>
            </tbody>
          </table>
          
    </div>
  </div>
</div>

<%- include('partials/footer') %>
